rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== USER DATA ====================
    
    // Users collection - each user can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User items/notes subcollection - user-specific CRUD operations
      match /items/{itemId} {
        // Allow read if authenticated and user owns the data
        allow read: if request.auth != null && request.auth.uid == userId;
        
        // Allow create if authenticated and userId matches authenticated user
        allow create: if request.auth != null 
                      && request.auth.uid == userId
                      && request.resource.data.userId == request.auth.uid;
        
        // Allow update if authenticated and user owns the data
        allow update: if request.auth != null && request.auth.uid == userId;
        
        // Allow delete if authenticated and user owns the data
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
      
      // Other subcollections (favorites, orders, etc.)
      match /favorites/{favId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /orders/{orderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // ==================== SHARED/PUBLIC DATA ====================
    
    // Products collection - read-only for all authenticated users
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins via backend
    }
    
    // Categories collection - read-only for all authenticated users
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins via backend
    }
    
    // ==================== HELPER FUNCTIONS ====================
    
    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Check if resource data is valid
    function hasValidData() {
      return request.resource.data.keys().hasAll(['title', 'description', 'createdAt', 'userId']);
    }
    
    // Check if update preserves required fields
    function isValidUpdate() {
      return request.resource.data.keys().hasAny(['title', 'description', 'updatedAt'])
             && !request.resource.data.keys().hasAny(['userId', 'createdAt']);
    }
  }
}
