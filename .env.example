# Cloudinary Configuration Template
# Copy this file to .env and replace with your actual values

# Your Cloudinary Cloud Name (required)
CLOUDINARY_CLOUD_NAME=your-cloud-name-here

# Your API Key (required for signed uploads)
CLOUDINARY_API_KEY=your-api-key-here

# Your API Secret (required for signed uploads) 
CLOUDINARY_API_SECRET=your-api-secret-here

# Upload Preset for unsigned uploads (recommended for mobile apps)
CLOUDINARY_UPLOAD_PRESET=your-upload-preset-here

# Optional: Environment (for organizing uploads)
CLOUDINARY_ENVIRONMENT=farm2home_app

# Optional: Folder structure for organizing images
CLOUDINARY_PRODUCT_FOLDER=products
CLOUDINARY_FARMER_FOLDER=farmers
CLOUDINARY_USER_FOLDER=users

# Image transformation settings
CLOUDINARY_QUALITY=auto:good
CLOUDINARY_FETCH_FORMAT=auto