rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow read for authenticated users (needed to list farmers)
      allow read: if isSignedIn();
      
      // Allow create for new users (during signup)
      allow create: if isSignedIn() && isOwner(userId);
      
      // Allow update only by the user themselves
      allow update: if isSignedIn() && isOwner(userId);
      
      // Deny delete
      allow delete: if false;
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Allow read and write for all authenticated users
      allow read, write: if isSignedIn();
    }
    
    // Products collection
    match /products/{productId} {
      // Allow all authenticated users to read products
      allow read: if isSignedIn();
      
      // Allow farmers to create and update their own products
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.farmerId == request.auth.uid;
    }
    
    // Status Updates collection
    match /statusUpdates/{updateId} {
      // Allow read and write for all authenticated users
      allow read, write: if isSignedIn();
    }
    
    // Supply Bookings collection
    match /supply_bookings/{bookingId} {
      // Allow farmers to read and create their own bookings
      allow read, write: if isSignedIn() && resource.data.farmerId == request.auth.uid;
      // Allow creating new bookings
      allow create: if isSignedIn();
      // Allow admins to read all bookings (add admin check if needed)
      allow read: if isSignedIn();
    }
    
    // Soil Testing Slots collection
    match /soil_testing_slots/{slotId} {
      // Allow farmers to read and create their own slots
      allow read, write: if isSignedIn() && resource.data.farmerId == request.auth.uid;
      // Allow creating new slots
      allow create: if isSignedIn();
      // Allow admins and staff to read all slots
      allow read: if isSignedIn();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn();
    }
    
    // Ratings collection  
    match /ratings/{ratingId} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
    }
  }
}
